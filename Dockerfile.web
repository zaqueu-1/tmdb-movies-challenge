# Dockerfile para o frontend (Produção e Desenvolvimento)
ARG NODE_ENV=production

# ============================================
# Stage 1: Build (apenas produção)
# ============================================
FROM node:20-alpine AS builder
WORKDIR /app

COPY package*.json ./
RUN npm ci

COPY . .

ARG VITE_API_BASE_URL
ARG VITE_TMDB_IMAGE_BASE_URL
ENV VITE_API_BASE_URL=$VITE_API_BASE_URL
ENV VITE_TMDB_IMAGE_BASE_URL=$VITE_TMDB_IMAGE_BASE_URL

RUN npm run build

# ============================================
# Stage 2: Produção com Nginx
# ============================================
FROM nginx:alpine AS production

COPY --from=builder /app/dist /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]

# ============================================
# Stage 3: Desenvolvimento
# ============================================
FROM node:20-alpine AS development

WORKDIR /app
COPY package*.json ./
RUN npm install

COPY . .

EXPOSE 5173
CMD ["npm", "run", "dev", "--", "--host"]
